
@model IEnumerable<EntityLayer.Concrete.Services>

@{
	ViewBag.Title = "ServicesDetails";
	Layout = "~/Views/Shared/AnaLayout.cshtml";
}

<div class="breadcrumb-option spad set-bg" data-setbg="/stag/img/a43.jpeg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb__text">
					@foreach (var item in Model)
					{
						<h2>@item.Title</h2>
						<div class="breadcrumb__links">
							<a href="/Slider/Index/">Ana Sayfa</a>
							<span>@item.Title</span>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>

<section class="blog-details spad">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-lg-12">
				<div class="blog__details__content">
					@foreach (var item in Model)
					{
						<div class="blog__details__title">
							<h2>@item.Title</h2>
							<img src="@item.Image" alt="@item.Title" style="width: 100%; height: 500px; object-fit: cover;">
							<p>
								@Html.Raw(item.Desc)
							</p>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</section>

@Html.Action("Footer", "Slider")