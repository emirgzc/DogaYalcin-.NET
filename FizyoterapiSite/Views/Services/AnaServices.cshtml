

@model IEnumerable<EntityLayer.Concrete.Services>

@using FizyoterapiSite.App_Code

<section class="project-page spad">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-4 col-sm-6">
					<div class="project__item">
						<img src="@item.Image" alt="@item.Title" style="width: 100%; height: 280px; object-fit: cover;">
						<h4><a href="/Services/ServicesDetails/@item.ServicesId/@Seo.AdresDuzenle(item.Title)">@item.Title</a></h4>
					</div>
				</div>
			}
			<div class="col-lg-12 text-center">
				<a href="/Services/Index/" class="primary-btn normal-btn">Hizmetlerimiz</a>
			</div>
		</div>
	</div>
</section>