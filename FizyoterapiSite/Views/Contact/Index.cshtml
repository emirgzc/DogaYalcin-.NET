
@model IEnumerable<EntityLayer.Concrete.Settings>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/AnaLayout.cshtml";
}


<div class="breadcrumb-option spad set-bg" data-setbg="/stag/img/a43.jpeg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb__text">
					<h2>İLETİŞİM</h2>
					<div class="breadcrumb__links">
						<a href="/Slider/Index/">Ana Sayfa</a>
						<span>İletişim</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<section class="contact spad">
	<div class="container">
		@foreach (var item in Model)
		{
			<div class="row">
				<div class="col-lg-6 col-md- col-sm-12">
					<div class="contact__text">
						<div class="section-title">
							<span>İLETİŞİM</span>
							<h2>BİZİMLE İLETİŞİME GEÇİN</h2>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="contact__widget__item">
						<div class="contact__widget__item__icon">
							<img src="~/stag/img/contact/ci-1.png" alt="Doğa Yalçın">
						</div>
						<div class="contact__widget__item__text">
							<h5>TELEFON NUMARASI</h5>
							<span>@item.Phone</span>
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="contact__widget__item">
						<div class="contact__widget__item__icon">
							<img src="~/stag/img/contact/ci-2.png" alt="Doğa Yalçın">
						</div>
						<div class="contact__widget__item__text">
							<h5>MAİL ADRESİ</h5>
							<span>@item.Email</span>
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-6 col-sm-6">
					<div class="contact__widget__item last__item">
						<div class="contact__widget__item__icon">
							<img src="~/stag/img/contact/ci-3.png" alt="Doğa Yalçın">
						</div>
						<div class="contact__widget__item__text">
							<h5>ADRES</h5>
							<span>@item.Address / @item.City / @item.Country</span>
						</div>
					</div>
				</div>
			</div>
			<div class="map">
				<iframe src="@item.Map" height="460" style="border:0;" allowfullscreen=""></iframe>
			</div>
		}
	</div>
</section>

@Html.Action("Footer", "Slider")