
@using PagedList
@using PagedList.Mvc

@using EntityLayer.Concrete
@model PagedList.IPagedList<Galeri>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/AnaLayout.cshtml";
}

<div class="breadcrumb-option spad set-bg" data-setbg="/stag/img/a43.jpeg">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<div class="breadcrumb__text">
					<h2>GALERİ</h2>
					<div class="breadcrumb__links">
						<a href="/Slider/Index/">Ana Sayfa</a>
						<span>Galeri</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Breadcrumb Section End -->
<!-- Project Page Section Begin -->
<section class="project-page spad">
	<div class="container">
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="col-lg-3 col-md-3 col-sm-6">
					<div class="project__item">
						<a href="@item.Image" target="_blank"><img src="@item.Image" alt="Doğa Yalçın" style="width: 100%; height: 280px; object-fit: cover;"></a>
					</div>
				</div>
			}
		</div>
		@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new
			PagedListRenderOptions
			{
				   LiElementClasses = new List<string>
				   { "page-link" }
			})
	</div>
</section>

@Html.Action("Footer", "Slider")

